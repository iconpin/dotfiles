filetype plugin indent on
syntax on

set number
set norelativenumber
set modeline
set ruler
set cursorline
set scrolloff=5

set expandtab
set shiftwidth=2
set tabstop=2
set softtabstop=2

set background=dark

set laststatus=2

nnoremap <C-h> :bp<cr>
nnoremap <C-l> :bn<cr>

nnoremap <C-j> 10j
nnoremap <C-k> 10k

nnoremap <C-f> ==

